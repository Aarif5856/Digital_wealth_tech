<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title | default: 'Digital Wealth & Tech - Empower Your Digital Growth' }}</title>
    <meta name="description" content="Discover tools, templates, and automation systems to scale your online business. Digital products, SaaS tools, and automation templates for entrepreneurs.">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Digital Wealth & Tech - Empower Your Digital Growth">
    <meta property="og:description" content="Discover tools, templates, and automation systems to scale your online business.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ shop.url }}{{ page.url }}">
    <meta property="og:image" content="{{ 'og-image.jpg' | asset_url }}">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Digital Wealth & Tech - Empower Your Digital Growth">
    <meta name="twitter:description" content="Discover tools, templates, and automation systems to scale your online business.">
    <meta name="twitter:image" content="{{ 'og-image.jpg' | asset_url }}">
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom CSS -->
    {{ 'style.css' | asset_url | stylesheet_tag }}
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'brand-blue': '#2563eb',
                        'brand-purple': '#7c3aed',
                        'brand-green': '#059669',
                        'brand-orange': '#ea580c',
                    },
                    fontFamily: {
                        'sans': ['Inter', 'system-ui', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="font-sans bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex-shrink-0">
                    <a href="{{ routes.root_url }}" class="text-2xl font-bold text-gray-900">
                        <span class="text-brand-blue">Digital</span> <span class="text-brand-purple">Wealth</span> & <span class="text-brand-green">Tech</span>
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a href="{{ routes.root_url }}" class="text-gray-700 hover:text-brand-blue transition-colors duration-200">Home</a>
                    <a href="{{ routes.collections_url }}" class="text-gray-700 hover:text-brand-blue transition-colors duration-200">Products</a>
                    <a href="{{ routes.blogs_url }}" class="text-gray-700 hover:text-brand-blue transition-colors duration-200">Blog</a>
                    <a href="{{ pages.contact.url }}" class="text-gray-700 hover:text-brand-blue transition-colors duration-200">Contact</a>
                    <a href="{{ pages.about.url }}" class="text-gray-700 hover:text-brand-blue transition-colors duration-200">About</a>
                </nav>
                
                <!-- CTA Button -->
                <div class="hidden md:block">
                    <a href="{{ routes.collections_url }}" class="bg-brand-blue text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors duration-200">
                        Shop Now
                    </a>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="mobile-menu-button text-gray-700 hover:text-brand-blue focus:outline-none focus:text-brand-blue">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
            
            <!-- Mobile Navigation -->
            <div class="mobile-menu hidden md:hidden">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
                    <a href="{{ routes.root_url }}" class="block px-3 py-2 text-gray-700 hover:text-brand-blue">Home</a>
                    <a href="{{ routes.collections_url }}" class="block px-3 py-2 text-gray-700 hover:text-brand-blue">Products</a>
                    <a href="{{ routes.blogs_url }}" class="block px-3 py-2 text-gray-700 hover:text-brand-blue">Blog</a>
                    <a href="{{ pages.contact.url }}" class="block px-3 py-2 text-gray-700 hover:text-brand-blue">Contact</a>
                    <a href="{{ pages.about.url }}" class="block px-3 py-2 text-gray-700 hover:text-brand-blue">About</a>
                    <a href="{{ routes.collections_url }}" class="block px-3 py-2 bg-brand-blue text-white rounded-lg mx-3 text-center">Shop Now</a>
                </div>
            </div>
        </div>
    </header>

    <main>
        <!-- Hero Section -->
        {% section 'hero' %}
        
        <!-- Featured Products Section -->
        {% section 'featured-products' %}
        
        <!-- Benefits Section -->
        <section class="py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Why Choose Digital Wealth & Tech?</h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">We provide everything you need to succeed in the digital economy</p>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    <div class="text-center group">
                        <div class="w-16 h-16 bg-gradient-to-br from-brand-blue to-brand-purple rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-download text-white text-xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Instant Access Downloads</h3>
                        <p class="text-gray-600">Get immediate access to all digital products and templates after purchase</p>
                    </div>
                    
                    <div class="text-center group">
                        <div class="w-16 h-16 bg-gradient-to-br from-brand-green to-brand-blue rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-tools text-white text-xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Proven Business Tools</h3>
                        <p class="text-gray-600">Tested and proven tools that real entrepreneurs use to grow their businesses</p>
                    </div>
                    
                    <div class="text-center group">
                        <div class="w-16 h-16 bg-gradient-to-br from-brand-orange to-brand-purple rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-users text-white text-xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Trusted by Entrepreneurs</h3>
                        <p class="text-gray-600">Join thousands of successful entrepreneurs who trust our products</p>
                    </div>
                    
                    <div class="text-center group">
                        <div class="w-16 h-16 bg-gradient-to-br from-brand-purple to-brand-orange rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                            <i class="fas fa-headset text-white text-xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">24/7 Support</h3>
                        <p class="text-gray-600">Round-the-clock support to help you succeed with your digital ventures</p>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Testimonials Section -->
        {% section 'testimonials' %}
        
        <!-- About Section -->
        {% section 'about' %}
        
        <!-- Newsletter Section -->
        {% section 'newsletter' %}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Brand -->
                <div class="col-span-1 md:col-span-2">
                    <h3 class="text-2xl font-bold mb-4">
                        <span class="text-brand-blue">Digital</span> <span class="text-brand-purple">Wealth</span> & <span class="text-brand-green">Tech</span>
                    </h3>
                    <p class="text-gray-400 mb-4">Empowering digital entrepreneurs through smart, affordable, and ready-to-launch tools.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200">
                            <i class="fab fa-youtube text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="{{ routes.root_url }}" class="text-gray-400 hover:text-white transition-colors duration-200">Home</a></li>
                        <li><a href="{{ pages.privacy-policy.url }}" class="text-gray-400 hover:text-white transition-colors duration-200">Privacy Policy</a></li>
                        <li><a href="{{ pages.refund-policy.url }}" class="text-gray-400 hover:text-white transition-colors duration-200">Refund Policy</a></li>
                        <li><a href="{{ pages.terms-of-service.url }}" class="text-gray-400 hover:text-white transition-colors duration-200">Terms of Service</a></li>
                    </ul>
                </div>
                
                <!-- Contact -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Contact</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><i class="fas fa-envelope mr-2"></i>support@digitalwealthtech.com</li>
                        <li><i class="fas fa-phone mr-2"></i>1-800-DIGITAL</li>
                    </ul>
                </div>
            </div>
            
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2025 Digital Wealth & Tech. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.querySelector('.mobile-menu-button');
            const mobileMenu = document.querySelector('.mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
</body>
</html>
