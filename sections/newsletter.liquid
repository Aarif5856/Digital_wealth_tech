<!-- Newsletter Section -->
<section class="py-16 bg-gradient-to-br from-brand-blue to-brand-purple">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <!-- Section Header -->
        <div class="mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Stay Ahead of the Digital Curve</h2>
            <p class="text-xl text-blue-100 max-w-2xl mx-auto">
                Get exclusive templates, updates, and insider tips straight to your inbox. Join our community of successful digital entrepreneurs.
            </p>
        </div>
        
        <!-- Newsletter Form -->
        <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12">
            <div class="max-w-2xl mx-auto">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Get Exclusive Templates & Updates</h3>
                <p class="text-gray-600 mb-8">Join 10,000+ entrepreneurs who get our weekly newsletter with free resources and business insights.</p>
                
                <!-- Newsletter Form -->
                <form class="newsletter-form" action="{{ routes.root_url }}contact#contact_form" method="post" id="contact_form" accept-charset="UTF-8">
                    <input type="hidden" name="form_type" value="customer">
                    <input type="hidden" name="utf8" value="✓">
                    
                    <div class="flex flex-col sm:flex-row gap-4 mb-6">
                        <div class="flex-1">
                            <label for="newsletter-email" class="sr-only">Email Address</label>
                            <input 
                                type="email" 
                                id="newsletter-email" 
                                name="contact[email]" 
                                placeholder="Enter your email address" 
                                required
                                class="w-full px-6 py-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-blue focus:border-transparent text-lg"
                            >
                        </div>
                        <button 
                            type="submit" 
                            class="bg-gradient-to-r from-brand-blue to-brand-purple text-white px-8 py-4 rounded-lg font-semibold text-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 whitespace-nowrap"
                        >
                            <i class="fas fa-paper-plane mr-2"></i>
                            Join Now
                        </button>
                    </div>
                    
                    <!-- Privacy Notice -->
                    <p class="text-sm text-gray-500">
                        <i class="fas fa-shield-alt mr-1"></i>
                        We respect your privacy. Unsubscribe at any time. No spam, ever.
                    </p>
                </form>
                
                <!-- Benefits List -->
                <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6 text-left">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 w-6 h-6 bg-brand-green rounded-full flex items-center justify-center mr-3 mt-1">
                            <i class="fas fa-gift text-white text-sm"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Free Templates</h4>
                            <p class="text-sm text-gray-600">Get exclusive free templates every month</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex-shrink-0 w-6 h-6 bg-brand-orange rounded-full flex items-center justify-center mr-3 mt-1">
                            <i class="fas fa-lightbulb text-white text-sm"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Business Tips</h4>
                            <p class="text-sm text-gray-600">Weekly insights from successful entrepreneurs</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start">
                        <div class="flex-shrink-0 w-6 h-6 bg-brand-purple rounded-full flex items-center justify-center mr-3 mt-1">
                            <i class="fas fa-percent text-white text-sm"></i>
                        </div>
                        <div>
                            <h4 class="font-semibold text-gray-900 mb-1">Exclusive Discounts</h4>
                            <p class="text-sm text-gray-600">Special offers for subscribers only</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Social Proof -->
        <div class="mt-12">
            <p class="text-blue-100 mb-6">Trusted by entrepreneurs worldwide</p>
            <div class="flex flex-wrap justify-center items-center gap-8 opacity-75">
                <div class="text-white font-semibold text-lg">10,000+ Subscribers</div>
                <div class="text-white font-semibold text-lg">•</div>
                <div class="text-white font-semibold text-lg">4.9/5 Rating</div>
                <div class="text-white font-semibold text-lg">•</div>
                <div class="text-white font-semibold text-lg">50+ Countries</div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Success/Error Messages (Hidden by default) -->
<div id="newsletter-success" class="hidden fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <i class="fas fa-check-circle mr-2"></i>
    Successfully subscribed! Check your email for confirmation.
</div>

<div id="newsletter-error" class="hidden fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50">
    <i class="fas fa-exclamation-circle mr-2"></i>
    Something went wrong. Please try again.
</div>

<script>
// Newsletter form handling
document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('.newsletter-form');
    const successMessage = document.getElementById('newsletter-success');
    const errorMessage = document.getElementById('newsletter-error');
    
    if (newsletterForm) {
        newsletterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = document.getElementById('newsletter-email').value;
            
            if (email) {
                // Show success message (in a real implementation, you'd handle the actual form submission)
                successMessage.classList.remove('hidden');
                setTimeout(() => {
                    successMessage.classList.add('hidden');
                }, 5000);
                
                // Reset form
                newsletterForm.reset();
            } else {
                // Show error message
                errorMessage.classList.remove('hidden');
                setTimeout(() => {
                    errorMessage.classList.add('hidden');
                }, 5000);
            }
        });
    }
});
</script>

