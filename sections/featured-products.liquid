<!-- Featured Products Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Products</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover our most popular digital tools and templates that are helping entrepreneurs build successful online businesses</p>
        </div>
        
        <!-- Products Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {% for product in collections.all.products limit: 4 %}
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 group overflow-hidden">
                <div class="relative">
                    {% if product.featured_image %}
                        <img src="{{ product.featured_image | img_url: '400x300' }}" alt="{{ product.title }}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    {% else %}
                        <img src="https://placehold.co/400x300/2563eb/ffffff?text={{ product.title | url_encode }}" alt="{{ product.title }}" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                    {% endif %}
                    {% if product.compare_at_price > product.price %}
                        <div class="absolute top-4 right-4 bg-brand-orange text-white px-3 py-1 rounded-full text-sm font-semibold">
                            Sale
                        </div>
                    {% endif %}
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">{{ product.title }}</h3>
                    <p class="text-gray-600 mb-4">{{ product.description | strip_html | truncate: 100 }}</p>
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-2xl font-bold text-brand-blue">{{ product.price | money }}</span>
                        {% if product.compare_at_price > product.price %}
                            <span class="text-lg text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
                        {% endif %}
                    </div>
                    <a href="{{ product.url }}" class="block w-full bg-gradient-to-r from-brand-blue to-brand-purple text-white py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 text-center">
                        <i class="fas fa-eye mr-2"></i>
                        View Product
                    </a>
                </div>
            </div>
            {% endfor %}
            
            {% comment %} If no products exist, show a message {% endcomment %}
            {% if collections.all.products.size == 0 %}
            <div class="col-span-full text-center py-12">
                <h3 class="text-xl font-semibold text-gray-900 mb-4">No products available yet</h3>
                <p class="text-gray-600 mb-6">We're working on adding amazing products for you!</p>
                <a href="{{ routes.collections_url }}" class="inline-flex items-center bg-brand-blue text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                    <span>Browse All Products</span>
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            {% endif %}
        </div>
        
        <!-- View All Products Button -->
        <div class="text-center mt-12">
            <a href="{{ routes.collections_url }}" class="inline-flex items-center bg-white text-brand-blue border-2 border-brand-blue px-8 py-4 rounded-lg font-semibold text-lg hover:bg-brand-blue hover:text-white transition-all duration-300">
                <span>View All Products</span>
                <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </div>
</section>
